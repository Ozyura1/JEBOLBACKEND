# =====================================================
# JEBOL Mobile Government System - Laravel API
# =====================================================
# This is the ONLY authorized backend for this system.
# Node.js backend (../backend/) is DEPRECATED.
# =====================================================

APP_NAME=JEBOL
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# PRODUCTION REQUIREMENTS:
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://api.jebol.go.id

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

# Password hashing: Use 12+ rounds for government security
BCRYPT_ROUNDS=12

# Logging Configuration
# PRODUCTION: Use 'daily' or 'syslog' for audit compliance
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# PRODUCTION: Set to 'warning' or 'error'
LOG_LEVEL=debug

# Example MySQL local config
DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=jebol_local
# DB_USERNAME=root
# DB_PASSWORD=
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# =====================================================
# AUTHENTICATION & SECURITY
# =====================================================

# Sanctum Token Lifetimes (in minutes)
# Access tokens: Short-lived (15-60 minutes)
# Refresh tokens: Long-lived (7-30 days)
ACCESS_TOKEN_TTL=60
REFRESH_TOKEN_TTL=10080

# =====================================================
# CORS CONFIGURATION
# =====================================================
# CRITICAL: In production, MUST specify exact allowed origins.
# Wildcard (*) is security risk and NOT allowed in production.
#
# Development:
FRONTEND_URL=http://localhost:3000
#
# Production (comma-separated for multiple origins):
# FRONTEND_URL=https://app.jebol.go.id,https://admin.jebol.go.id

# If using Sanctum and cookies, set this to true and ensure FRONTEND_URL matches.
# For mobile apps using Bearer tokens, this can be false.
CORS_SUPPORTS_CREDENTIALS=false

# =====================================================
# SESSION SECURITY (for web-based admin panels)
# =====================================================
# Production MUST use secure cookies over HTTPS
# Uncomment these in production:
# SESSION_SECURE_COOKIE=true
# SESSION_HTTP_ONLY=true
# SESSION_SAME_SITE=lax

# =====================================================
# SESSION SECURITY
# =====================================================
# Production MUST use secure cookies over HTTPS
# SESSION_SECURE_COOKIE=true
# SESSION_HTTP_ONLY=true
# SESSION_SAME_SITE=lax
